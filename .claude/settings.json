{
  "permissions": {
    "allow": [
      "Bash(make format)",
      "Bash(make fix)",
      "Bash(make lint)",
      "Bash(make check)",
      "Bash(make ruff-fix)",
      "Bash(./execute_tests.sh*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git status)",
      "Bash(python scripts/jira_tool.py list*)",
      "Bash(python scripts/jira_tool.py get*)"
    ],
    "deny": [
      "Bash(rm -rf*)",
      "Bash(git push --force*)",
      "Bash(git reset --hard*)",
      "Read(**/.env)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "make format"
          }
        ]
      }
    ]
  },
  "language": "ru"
}
